<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/offset_10dp"
    android:layout_marginLeft="@dimen/offset_10dp"
    android:layout_height="@dimen/offset_50dp">
<ImageView
    android:id="@+id/mHeadNavBackIv"
    style="@style/WrapWrap"
    android:layout_alignParentLeft="true"
    android:layout_centerInParent="true"
    android:focusable="true"
    android:clickable="true"
    android:src="@drawable/nav_icon_back_default"/>
    <TextView
        android:id="@+id/mHeadNavTitleTv"
        android:layout_centerInParent="true"
        android:textSize="@dimen/font_large"
        android:textColor="@color/common_black"
        style="@style/WrapWrap"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mHeadNavRightTitleTv"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/offset_10dp"
            android:focusable="true"
            android:clickable="true"
            android:textSize="@dimen/font_size_tiny" />
        <ImageView
            android:id="@+id/mHeadNavRightBtnIv"
            android:focusable="true"
            android:clickable="true"
            style="@style/WrapWrap"/>
    </LinearLayout>
</RelativeLayout>